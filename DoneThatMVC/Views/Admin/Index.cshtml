@model List<DoneThatMVC.Models.User>
@{
    ViewData["Title"] = "Index";
}

<main class="px-4">

<div class="table-responsive">


    <table class="table table-hover table-responsive-sm">
        <thead class="tablehead">

            <tr>

                <th>Username</th>
                <th>Name</th>
                <th>Surname</th>
                <th>Admin</th>
                <th>Active</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Username</td>
                    <td>@item.Name</td>
                    <td>@item.Surname</td>
                    <td>@item.IsAdmin</td>
                    <td>@item.IsActive</td>
                    <td>@item.Email</td>
                    <td>
                        <a href="@Url.Action("Edit","Admin")?id=@item.Id">Edit</a> |
                        <a href="javascript:loadTask(@item.Id)">Delete</a> |
                        <a href="#">Complete</a>
                    </td>
                </tr>
            }

            <tr>
                <td>item.Title</td>
                <td>item.Description</td>
                <td>item.Start</td>
                <td>item.Finish</td>
                <td>item.Completed</td>
                <td>item.Priority</td>
                <td>new</td>
            </tr>
